*
  box-sizing border-box
  margin 0
  padding 0

body
  background-color #0a0c1b
  width 100vw
  height 100vh
  display flex
  flex-direction column
  align-items center
  justify-content center


.card
  background-color #1c1938
  width 1000px
  height 400px
  display flex
  justify-content space-between
  border-radius 8px

  &-left
    width 45%
    padding 50px

    h1
      color white
      font-family 'Inter', sans-serif
      font-weight 700
      font-size calc(32rem/16)

    .accent
      color #af5fdd

    p
      margin-top 20px
      color #848299
      font-family 'Inter', sans-serif
      font-size calc(14rem/16)
      line-height 22px

    &--statistics
      display flex
      justify-content space-between
      margin-top 80px
      width 90%

      &-item
        h2
          color white
          font-family 'Inter', sans-serif
          text-transform uppercase
          font-size calc(20rem/16)

        p
          text-transform uppercase
          font-family 'Lexend Deca'
          margin-top 5px
          font-size calc(12rem/16)

  &-right
    width 50%
    overflow hidden
    position relative
    border-top-right-radius 8px
    border-bottom-right-radius 8px

    .purple-filter
      width 100%
      height 100%
      position absolute
      top 0
      background-color rgba(114, 4, 155, 0.53)
      z-index 1


@media(max-width: 1000px)
  .card
    flex-direction column
    width 90%
    height auto

    &-left
      width 100%
      order 2
      padding 30px

      h1
        text-align center
        font-size calc(28rem/16)

      p
        text-align center

      &--statistics
        width 100%
        margin-top 0
        flex-direction column
        text-align center

        &-item
          margin-top 30px

          h2
            font-size calc(25rem/16)

    &-right
      width 100%
      max-height 300px
      order 1
      border-bottom-right-radius 0
      border-top-left-radius 8px

      picture
        img
          width 100%
          height 100%
          object-fit cover
          object-position 0 0